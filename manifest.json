{
  "manifest_version": 2,
  "name": "Pronote Plus",
  "version": "1.0",
  "description": "Ajoute des fonctionnalit√©s sur le site Pronote",
  "browser_specific_settings": {
    "gecko": {
      "id": "pronoteplus@addon.firefox.com"
    }
  },
  "permissions": [
    "activeTab",
    "storage",

    "https://0900004r.index-education.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://0900004r.index-education.net/pronote/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
